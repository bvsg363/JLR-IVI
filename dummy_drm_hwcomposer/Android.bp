// =====================
// libdrmhwc_utils.a
// =====================
cc_library_static {
    name: "dummy_libdrmhwc_utils",

    srcs: ["utils/worker.cpp"],

    include_dirs: ["hardware/libhardware/modules/dummy_drm_hwcomposer/include"],

    cflags: [
        "-Wall",
        "-Werror",
    ],

    vendor: true,

}

// =====================
// hwcomposer.default.so
// =====================
cc_defaults {
    name: "hwcomposer.dummy_drm_defaults",

    shared_libs: [
        "libcutils",
        "libdrm",
        "libhardware",
        "liblog",
        "libsync",
        "libui",
        "libutils",
    ],

    include_dirs: ["hardware/libhardware/modules/dummy_drm_hwcomposer/include"],

    static_libs: ["dummy_libdrmhwc_utils"],

    cflags: [
        "-Wall",
        "-Werror",
    ],

    cppflags: [
        "-DHWC2_USE_CPP11",
        "-DHWC2_INCLUDE_STRINGIFICATION",
    ],

    relative_install_path: "hw",
    vendor: true,
}
cc_library_static {
    name: "dummy_drm_hwcomposer",
    defaults: ["hwcomposer.dummy_drm_defaults"],
    srcs: [
        "drmhwctwo.cpp",

        "compositor/drmdisplaycomposition.cpp",
        "compositor/drmdisplaycompositor.cpp",

        "drm/drmconnector.cpp",
        "drm/drmcrtc.cpp",
        "drm/drmdevice.cpp",
        "drm/drmencoder.cpp",
        "drm/drmeventlistener.cpp",
        "drm/drmmode.cpp",
        "drm/drmplane.cpp",
        "drm/drmproperty.cpp",
        "drm/resourcemanager.cpp",
        "drm/vsyncworker.cpp",

        "platform/platform.cpp",

        "utils/autolock.cpp",
        "utils/hwcutils.cpp",
    ],
}

cc_library_shared {
    name: "hwcomposer.default",
    defaults: ["hwcomposer.dummy_drm_defaults"],
    whole_static_libs: ["dummy_drm_hwcomposer"],
    srcs: ["platform/platformdrmgeneric.cpp"],
    cppflags: ["-DUSE_DRM_GENERIC_IMPORTER"],
}
